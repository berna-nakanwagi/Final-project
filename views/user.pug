doctype html
html
  head
    meta(charset='UTF-8')
    title User Profile
    link(rel='stylesheet' href='../css/style_user.css')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet")
    script(src="../js/validation.js") //- include JS file

  body
    .container
      h1 User Registration

      //- Success messages
      if success_msg && success_msg.length
        each msg in success_msg
          .alert.alert-success= msg

      //- Error messages
      if error_msg && error_msg.length
        each msg in error_msg
          .alert.alert-danger= msg

      form#register-form(action="/register" method="post")
        label(for='username') Username:
        input#username(type='text' name='username' placeholder='Enter your username')
        #error-username.error

        label(for='email') Email:
        input#email(type='email' name='email' placeholder='Enter your email')
        #error-email.error

        label(for='role') Role:
        select#role(name="role") 
          option(value="") Select role 
          option(value="manager") Manager
          option(value="sales-Agent") Sales agent
        #error-role.error

        label(for='password') Password:
        input#password(type='password' name='password' placeholder='password')
        #error-password.error

        button(type='submit') Register

        script(src="/js/formValidation.js")
