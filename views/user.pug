doctype html
html
  head
    meta(charset='UTF-8')
    title User Profile
    link(rel='stylesheet' href='../css/style_user.css')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet")

  body
    .container
      h1 User Registration

      if success_msg && success_msg.length > 0
        .alert.alert-success
          = success_msg

      form(action="/register" method="post")
        #user-error.error

        label(for='username') Username:
        input#username(type='text' name='username' placeholder='Enter your username')

        label(for='email') Email:
        input#email(type='email' name='email' placeholder='Enter your email')

        label(for='role') Role:
        select#role(name="role") 
          option(value="") Select role 
          option(value="manager") Manager
          option(value="sales-Agent") Sales agent

        label(for='password') Password:
        input#password(type='password' name='password' placeholder='Minimum 6 characters')

        button(type='submit') Register
